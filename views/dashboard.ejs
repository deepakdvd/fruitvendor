  <script>
    function edit(a, b){
    
      $('#imgname').val(b);
      $('#unameid').val(a);
      $('#vv3').show();
      $('#2').hide();
      $('#1').hide();
    }
    function del(a){
      
      $.ajax({
        type: 'POST',
        url: '/delete?id='+a,
         success: function(data) {
            alert('product successfully deleted');
            window.location.href = '/dashboard';
           // location.reload();
      }
        
});

    }
  </script>
